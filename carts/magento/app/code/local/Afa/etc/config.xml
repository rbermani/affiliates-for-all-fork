<?xml version="1.0"?>

<config>
  <global>
    <models>
      <afacatalog>
        <class>Afa</class>
      </afacatalog>
    </models>
    <events>
      <controller_front_init_before>
        <observers>
          <afa_init_observer>
            <type>singleton</type>
            <class>afacatalog/observer</class>
            <method>set_affiliate_cookie</method>
          </afa_init_observer>
        </observers>
      </controller_front_init_before>
      <sales_order_place_after>
        <observers>
          <afa_init_observer>
            <type>singleton</type>
            <class>afacatalog/observer</class>
            <method>order_placed</method>
          </afa_init_observer>
        </observers>
      </sales_order_place_after>
      <sales_order_save_after>
        <observers>
          <afa_init_observer>
            <type>singleton</type>
            <class>afacatalog/observer</class>
            <method>model_saved</method>
          </afa_init_observer>
        </observers>
      </sales_order_save_after>
    </events>
    <helpers>
      <afa>
        <class>Afa_Helper</class>
      </afa>
    </helpers>
  </global>
  <adminhtml>
    <acl>
      <resources>
        <all>
          <title>Allow Everything</title>
        </all>
        <admin>
          <children>
            <system>
              <children>
                <config>
                  <children>
                    <afa>
                      <title>Affiliates For All Section</title>
                    </afa>
                  </children>
                </config>
              </children>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
  <default>
    <afa>
      <afa>
        <url>http://www.zenobooks.com/affiliates</url>
        <secret>Affiliate7932</secret>
      </afa>
    </afa>
  </default>
</config>
